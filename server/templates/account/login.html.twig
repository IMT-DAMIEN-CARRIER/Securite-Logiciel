{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <div class="bg-light py-3 px-3">
                    <h1>Connectez vous !</h1>

                    {% if hasError %}
                        <div class="alert alert-danger">
                            Une erreur est survenue. Le nom d'utilisateur ou le mot de passe est invalide.
                        </div>
                    {% endif %}

                    <form action="{{ path('account_login') }}" method="post">
                        <div class="form-group">
                            <label for="email">Login</label>
                            <input type="text" class="form-control" placeholder="Login" name="_username"
                                   id="email" required value="{{ username }}">
                        </div>
                        <div class="form-group">
                            <label for="password">Mot de pase</label>
                            <input type="password" class="form-control" placeholder="Mot de passe" name="_password"
                                   id="password" required>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Connexion</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
